<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <TextView
        android:text="Video 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:text="30.03.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_caption"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <ImageButton
        android:layout_width="@dimen/button_small"
        android:layout_height="@dimen/button_small"
        android:alpha="0.5"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ib_delete" />

    <ImageButton
        android:layout_width="@dimen/button_small"
        android:layout_height="@dimen/button_small"
        android:alpha="0.5"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_file_upload_black_24dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ib_delete"
        android:id="@+id/ib_upload" />

</RelativeLayout>